<?xml version="1.0" encoding="UTF-8"?>
<config>
    <!-- Reserve 30px at top of all outputs (panel height) -->
    <margin top="30"/>
    <windowRules>
        <windowRule identifier="com.drawsko.TopBar*" matchOnce="false" fixedPosition="yes" serverDecoration="no">
            <skipTaskbar>yes</skipTaskbar>        <!-- Donâ€™t show in panels/taskbar -->
            <skipWindowSwitcher>yes</skipWindowSwitcher>  <!-- Omit Alt-Tab -->
            <action name="MoveTo" x="0" y="0"/>    <!-- Position at top-left of its output -->
        </windowRule>
    </windowRules>
</config>
